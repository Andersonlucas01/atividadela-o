// Função para ler um número do usuário
function lerNumero() {
  const readline = require('readline').createInterface({
    input: process.stdin,
    output: process.stdout
  });

  return new Promise((resolve) => {
    readline.question('Digite uma nota entre 0 e 10: ', (numero) => {
      readline.close();
      resolve(numero);
    });
  });
}

// Função principal
async function main() {
  let nota = await lerNumero();

  // Validação da nota
  while (nota < 0 || nota > 10) {
    console.log('Nota inválida! Digite novamente.');
    nota = await lerNumero();
  }

  console.log(`Nota informada: ${nota}`);
}

main();
